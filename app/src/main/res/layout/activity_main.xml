<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gomez.jhond.calculadora.MainActivity">

    <Button
        android:id="@+id/bSuma"
        android:layout_width="142dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="440dp"
        android:text="+"
        android:onClick="Calcular"
        android:background="@color/gold"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bNueve"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bTres"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/orangered"
        android:layout_marginTop="292dp"
        android:text="3"
        android:onClick="Calcular"
        android:textSize="45dp"
        app:layout_constraintEnd_toStartOf="@+id/bDiv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bOcho"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bDos"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="292dp"
        android:background="@color/orangered"
        android:text="2"
        android:textSize="45dp"
        android:onClick="Calcular"
        app:layout_constraintEnd_toStartOf="@+id/bSeis"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bUno"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="292dp"
        android:text="1"
        android:onClick="Calcular"
        android:background="@color/orangered"
        android:textSize="45dp"
        app:layout_constraintEnd_toStartOf="@+id/bOcho"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bDiv"
        android:layout_width="142dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="152dp"
        android:text="/"
        android:onClick="Calcular"
        android:background="@color/gold"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bNueve"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bSeis"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="152dp"
        android:background="@color/orangered"
        android:text="6"
        android:onClick="Calcular"
        android:textSize="45dp"
        app:layout_constraintEnd_toStartOf="@+id/bDiv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bOcho"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bCinco"
        android:layout_width="140dp"
        android:background="@color/orangered"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="148dp"
        android:text="5"
        android:onClick="Calcular"
        android:textSize="45dp"
        app:layout_constraintEnd_toStartOf="@+id/bSeis"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bCuatro"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="152dp"
        android:text="4"
        android:onClick="Calcular"
        android:background="@color/orangered"
        android:textSize="45dp"
        app:layout_constraintEnd_toStartOf="@+id/bOcho"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <TextView
        android:id="@+id/tDisplay"
        android:layout_width="570dp"
        android:layout_height="113dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bSiete"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="7"
        android:background="@color/orangered"
        android:textSize="45dp"
        android:onClick="Calcular"
        app:layout_constraintEnd_toStartOf="@+id/bOcho"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bOcho"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="12dp"
        android:text="8"
        android:onClick="Calcular"
        android:background="@color/orangered"
        android:textSize="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bResta"
        android:layout_width="142dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="292dp"
        android:text="-"
        android:background="@color/gold"
        android:textSize="45dp"
        android:onClick="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bNueve"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bModulo"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="440dp"
        android:text="%"
        android:background="@color/gold"
        android:textSize="45dp"
        android:onClick="Calcular"
        app:layout_constraintEnd_toStartOf="@+id/bDiv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bOcho"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bCero"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="440dp"
        android:text="0"
        android:background="@color/orangered"
        android:textSize="45dp"
        android:onClick="Calcular"
        app:layout_constraintEnd_toStartOf="@+id/bSeis"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bPunto"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/gold"
        android:layout_marginTop="440dp"
        android:text="."
        android:onClick="Calcular"
        android:textSize="45dp"
        app:layout_constraintEnd_toStartOf="@+id/bOcho"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bNueve"
        android:layout_width="140dp"
        android:layout_height="127dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="9"
        android:onClick="Calcular"
        android:background="@color/orangered"
        android:textSize="45dp"
        app:layout_constraintStart_toEndOf="@+id/bOcho"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bAC"
        android:layout_width="280dp"
        android:layout_height="104dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="AC"
        android:onClick="Calcular"
        android:textSize="45dp"
        android:background="@color/tomato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bSuma" />

    <Button
        android:id="@+id/bMult"
        android:layout_width="142dp"
        android:layout_height="127dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="X"
        android:onClick="Calcular"
        android:background="@color/gold"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bNueve"
        app:layout_constraintTop_toBottomOf="@+id/tDisplay" />

    <Button
        android:id="@+id/bIgual"
        android:layout_width="284dp"
        android:layout_height="101dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="="
        android:onClick="Calcular"
        android:background="@color/goldenrod"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bSuma" />

</android.support.constraint.ConstraintLayout>
